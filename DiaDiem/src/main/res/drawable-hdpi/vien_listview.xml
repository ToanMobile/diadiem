<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--set màu nền-->
    <solid
        android:color="#ffe4e4e4"></solid>
    <!--Đặt thuộc tính màu và độ rộng của đường viền-->
    <stroke
        android:width="1dp"
        android:color="#ff424242"></stroke>
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"></padding>
    <gradient
        android:startColor="#ffededed"
        android:endColor="#ffa3a3a3"
        android:angle="270"></gradient>
</shape>